{
  "version": 2,
  "builds": [
    { "source": "index.js", "use": "@vercel/node" },
    { "source": "public/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "index.js" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ]
}